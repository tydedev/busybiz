{
  "$schema": "https://schemas.wp.org/wp/6.9/theme.json",
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "color": "#6366f1",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#312e81",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "color": "#f97316",
          "name": "Terziary",
          "slug": "terziary"
        },
        {
          "color": "#fafafa",
          "name": "Light",
          "slug": "light"
        },
        {
          "color": "#e2e8f0",
          "name": "Gray",
          "slug": "gray"
        },
        {
          "color": "#0f172a",
          "name": "Dark",
          "slug": "dark"
        }
      ]
    },
    "layout": {
      "contentSize": "620px",
      "wideSize": "1200px"
    },
    "spacing": {
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    "typography": {
      "defaultFontSizes": false,
      "fontSizes": [
        {
          "fluid": true,
          "name": "Extra Small",
          "slug": "x-small",
          "size": "0.75rem"
        },
        {
          "fluid": true,
          "name": "Small",
          "slug": "small",
          "size": "0.875rem"
        },
        {
          "fluid": true,
          "name": "Medium",
          "slug": "medium",
          "size": "1.2rem"
        },
        {
          "fluid": true,
          "name": "Large",
          "slug": "large",
          "size": "2.125rem"
        },
        {
          "fluid": true,
          "name": "Extra Large",
          "slug": "x-large",
          "size": "3.25rem"
        },
        {
          "fluid": true,
          "name": "XX Large",
          "slug": "xx-large",
          "size": "4.25rem"
        }
      ],
      "fontFamilies": [
        {
          "fontFamily": "'Inter', sans-serif",
          "name": "Inter",
          "slug": "inter",
          "fontFace": [
            {
              "fontFamily": "Inter",
              "fontWeight": "400 700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/inter/Inter-VariableFont_opsz,wght.ttf"
              ]
            },
            {
              "fontFamily": "Inter",
              "fontWeight": "400 700",
              "fontStyle": "italic",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/inter/Inter-Italic-VariableFont_opsz,wght.ttf"
              ]
            }
          ]
        }
      ]
    },
    "useRootPaddingAwareAlignments": true
  },

  "styles": {
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "top": "0.5rem",
            "bottom": "0.5rem"
          }
        }
      },
      "core/list": {
        "spacing": {
          "margin": {
            "top": "0.5rem",
            "bottom": "0.5rem"
          }
        }
      },
      "core/site-title": {
        "css": "& :hover{text-decoration:none;}"
      },
      "core/post-title": {
        "color": {
          "text": "var(--wp--preset--color--dark)"
        },
        "css": "& :hover{text-decoration:none; color:var(--wp--preset--color--dark);}"
      }
    },
    "elements": {
      "link": {
        "typography": {
          "fontWeight": "600",
          "textDecoration": "none"
        },
        "color": {
          "text": "var(--wp--preset--color--dark)"
        },
        ":hover": {
          "typography": {
            "textDecoration": "underline"
          },
          "color": {
            "text": "var(--wp--preset--color--secondary)"
          }
        }
      },
      "heading": {
        "typography": {
          "fontWeight": "600",
          "lineHeight": "1.5"
        },
        "color": {
          "text": "var(--wp--preset--color--dark)"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-small)",
          "fontWeight": "500",
          "textTransform": "uppercase"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "textTransform": "uppercase"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)"
        }
      }
    },
    "spacing": {
      "blockGap": "0"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.5"
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    }
  ],
  "version": 3
}
